---
const today = new Date();
type Link = {
	name: string;
	src: string;
};
const bottomLinks:Link[] = [
	{
		name: "Land Acknowledgement",
		src: "/land"
	},
	{
		name: "Search",
		src: '/search'
	}
]
---

<footer>
	<div>
		<ul class="flexy bottom-nav">
		{bottomLinks.map(link =>(<li><a href={link.src}>{link.name}</a></li>))}
		</ul>
	<div>
	<div>&copy; {today.getFullYear()} Puyallup Valley Chapter of the Japanese American Citizens League. All rights reserved.</div>
	<div class="social-links">
		<a href="https://www.instagram.com/puyallupvalleyjacl" target="_blank">
			<span class="sr-only">Go to Puyallup Valley JACL's Instagram page</span>
			<img src="Instagram-logo.png" alt="Instagram logo" height="40" width="40"/>
		</a>
		<a href="https://www.facebook.com/puyallupvalleyjacl" target="_blank">
			<span class="sr-only">Go to Puyallup Valley JACL's Facebook page</span>
			<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 256 256"><path fill="#1877F2" d="M256 128C256 57.308 198.692 0 128 0C57.308 0 0 57.308 0 128c0 63.888 46.808 116.843 108 126.445V165H75.5v-37H108V99.8c0-32.08 19.11-49.8 48.348-49.8C170.352 50 185 52.5 185 52.5V84h-16.14C152.959 84 148 93.867 148 103.99V128h35.5l-5.675 37H148v89.445c61.192-9.602 108-62.556 108-126.445"/><path fill="#FFF" d="m177.825 165l5.675-37H148v-24.01C148 93.866 152.959 84 168.86 84H185V52.5S170.352 50 156.347 50C127.11 50 108 67.72 108 99.8V128H75.5v37H108v89.445A128.959 128.959 0 0 0 128 256a128.9 128.9 0 0 0 20-1.555V165h29.825"/></svg>
		</a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--navigation-gradient)) no-repeat;
		color: var(--navigation);
		text-align: center;
	}
	.flexy {
		display:flex;
		justify-content: center;
		flex-wrap: wrap;
	}
	.bottom-nav li {
		list-style: none;
	}
	.bottom-nav a {
		text-decoration: none;
		font-weight: 700;
		color: var(--navigation);
		margin: 0 1rem;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>
