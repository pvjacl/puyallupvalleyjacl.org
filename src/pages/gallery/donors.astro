---
import Layout from '@layouts/SinglePage.astro';


// Donors will be arrays of strings
// first item in array will be name of donor
// second item is optional and would be the honoraria
const donors = [
	["The Yotsuuye Family"],
	["Frank and Penny Fukui", "Yoshizo and Mae Fukui - Mom & Dad Beppu"],
	["Liz and Mike Dunbar"],
	["Tsuyoshi and Yayoi Inouye Family", "Bessie and Roy Okada -  Ruby, Frances, Lillian, Howard, Lloyd Inouye"],
	["Lyla Tsuji Anderson"],
	["Bill Driscoll and Lisa Hoffman"],
	["Sheldon Arakaki"],
	["Barbara Mizoguchi-Asahara and David Asahara"],
	["Melvin Inouye"],
	["Eileen Yamada Lamphere and Mark Lamphere", "Carl, Tane, Kazuko, George, Henry, Rose, and Mary Osawa"],
	["John Meister", "Sandy Shizue Meister"],
	["The Okamoto Family", "Tokio, Sadako, Toshiko, Michiko, and Kazuko Akagi"],
	["Sharon Sobie Seymour and David Seymour", "Yae Ogino"],
	["Edwin Shigihara"],
	["The Tsutsumoto and Sakai Families", "Nobuichi, Harumi, May, Ben, Helene, Tom, Tama, Sally and Katie"]
];
type OrgInfo  = {
	name: string;
	icon: string;
	width?: string;
}

const iconDir = '/donor-icons/';
const organizations:OrgInfo[] = [
	{
		name: "The National Park Service",
		icon: "nps-logo.png"
	},
	{
		name: "The State of Washington",
		icon: "Seal_of_Washington.png"
	},
	{
		name: "Pierce County",
		icon: "Pierce_County_Logo.png"
	},
	{
		name: "Bill and Melinda Gates Foundation",
		icon: "Gates-Foundation.png"
	},
	{
		name: "The Masto Foundation",
		icon: "mastofoundation+logo.jpg"
	},
	{
		name: "Japanese American Community Foundation",
		icon: "JACF-logo-80H.png"
	},
	{
		name: "Norcliffe Foundation",
		icon: "norcliffe-foundation.png"
	},
	{
		name: "Japanese American Citizens League (Seattle Chapter)",
		icon: "seattle-JACL-logo.jpg",
		width: "160px"
	},
	{
		name: "The Bamford Foundation",
		icon: "Bamford-Foundation.png"
	},
	{
		name: "Robert Chinn Foundation",
		icon: "Robert-Chinn-LOGO.png"
	},
	{
		name: "Community Health Care",
		icon: "CommHealth-logo.png",
		width: "160px"
	},
	{
		name: "Japanese American Citizens League (National Chapter)",
		icon: "Natl-LOGO.jpg"
	},
];

const endorsements = [
	"Alaska Chapter Japanese American Citizens League",
	"Olympia Chapter Japanese American Citizens League",
	"Portland Chapter Japanese American Citizens League",
	"Spokand Chapter Japanese American Citizens League",
	"Twin Cities Chapter Japanese American Citizens League"
]
---

<Layout
	title="Donors and Endorsements"
	description="Leadership donors, organizations and endorsements"
	keywords='Donors Supporting Organizations Endorsements'
	pubDate={new Date('May 11, 2024')}
>
<h2>
	Leadership Donors
</h2>
<ul class="donor-list">
	{
		donors.map(donorNames => {
			if (donorNames.length < 2) {
				return (
					<li>
						<div>
							{donorNames[0]}
						</div>
					</li>
				)
			}
			return (
				<li>
					<div>
						{donorNames[0]}<span class="honoraria">In honor of {donorNames[1]}</span> 
					</div>
				</li>
			)
		})
	}
</ul>
<h2>Honorary co-chairs</h2>
<div>Our honorary co-chairs for the Remembrance Gallery project are:
	<ul>
		<li>Bill Weyerhaeser</li>
		<li>Frank and Penny Fukui</li>
	</ul>
</div>
<h2>Contributing Organizations</h2>

<ul class="flexy-icons">
	{
		organizations.map(org => {
			if (org.width) {
				return (
				<li title={org.name}>
					<img src={`${iconDir}${org.icon}`} alt={org.name} width={org.width}/>
				</li>
				)
			}
			return (
				<li title={org.name}>
					<img src={`${iconDir}${org.icon}`} alt={org.name} />
				</li>
			)
		})
	}
</ul>

<h2>Endorsements</h2>

<ul>
	{
		endorsements.map(donor => {
			return (
				<li>{donor}</li>
			)
		})
	}
</ul>

</Layout>

<style lang="scss">
	.donor-list {
		display: flex;
		flex-wrap: wrap;
		list-style: none;
		justify-content: space-between;
		gap: 12px 8px;
		padding: 0;
		margin: 0 0 1rem 0;
		li {
			display:flex;
			flex-direction: column;
			justify-content: center;
			width: 49%;
			height: 7rem;
			text-align: center;
			line-height: 1.4rem;
			min-width: 20rem;
			background: rgb(226,185,227);
			background: linear-gradient(120deg, rgb(243, 204, 243) 0%, rgba(251,236,254,1) 50%, rgb(219, 174, 245) 100%);
			box-shadow: 8px 4px 6px lightgray;
			div {
				margin: 0 1rem;
			}
			.honoraria {
				display:block;
				margin-top: 0.5rem;
				font-size: 1rem;
				line-height: 1.1rem;
				font-style: italic;
			}
		}
	}
	.flexy-icons {
		display:flex;
		justify-content: space-around;
		flex-wrap: wrap;
		list-style: none;
		gap: 1rem;
		padding: 0;
	}
	.flexy-icons li {
		display:flex;
		justify-content: center;
		align-content: center;
		max-width: 200px;
		max-height: 200px;
		min-height: 130px;
	}
	.flexy-icons img {
		object-fit: scale-down;
	}
</style>